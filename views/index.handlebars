<h1 class="text-center">Eat Da Burger!</h1>
<br>
<br>
<div class="container">

    <h3 class="card-title text-center">Add A Burger</h3>
    <form class="create-form text-center">
        <div class="form-group">
            <input type="text" id="burger-name" name="name" placeholder="Burger Name" required>
            <button class="btn btn-sm btn-warning" type="submit">Submit</button>
        </div>
    </form>

    <div class="row">
        <div class="col-md-6">
            <h2 class="ml-5 ">Burgers Ready To Eat</h2>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <button class=" change-status btn btn-warning" data-id="{{id}}" data-devoured="{{devoured}}">
                        Devour it!
                    </button>
                    <span>{{burger_name}}</span>
                </li>
                {{/unless}}
                {{/each}}


            </ol>
        </div>


        <div class="col-md-6">
            <h2 class="ml-5">Burgers You've Eaten</h2>
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <button class="remove-burger btn btn-warning" data-id="{{id}}">
                        Remove it!
                    </button>
                    <span>{{burger_name}}</span>
                </li>
                {{/if}}
                {{/each}}

            </ol>
        </div>
    </div>



</div>