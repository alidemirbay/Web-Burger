<h1 class="text-center">Eat Da Burger!</h1>
<div class="container">

    <div class="card text-center">
        <h2 class="card-title">Add Burger</h2>

        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burger-name" name="name" placeholder="Burger Name">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>

    </div>
    <div class="row">
        <div class="col-md-6">
            <h2 class="ml-5 ">Burgers Ready To Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>


        <div class="col-md-6">
            <h2 class="ml-5">Burgers You've Eaten</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>



</div>